{
    "manifest_version": 3,
    "name": "SnipDeck",
    "description": "A simple Chrome extension to manage snippets.",
    "version": "1.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["storage"]
  }  